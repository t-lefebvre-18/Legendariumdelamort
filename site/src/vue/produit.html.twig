{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Produit {% endblock %}
{% block contenu %}
    
<div class="center-block col-md-10" style="float:none">

 
<h1  > Gestion des produits </h1>
<br/>
<div class="panel panel-custom" style="color: #34495e;">
 <!-- Table -->
 <div class="table-responsive">
 <table class="table table-hover table-striped">
 <tr style=" background-color: #4aa3df; color: #fff"><th>designation</th><th>description</th><th>prix</th><th>Type</th><th></th><th></th></tr>
 {% for p in liste %}
 <tr><td>{{p.designation}}</td><td>{{p.description}}</td><td>{{p.prix}} €</td> <td>{{p.libelle}}</td><td> <div class="btn-group btn-group-lg"><a href="#"><span class="glyphicon
glyphicon-pencil" aria-hidden="true"></span></a></div></td><td><div class="btn-group btn-group-lg"><a
href="index.php?page=produit&id={{p.id}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></div></td></tr>
 
 {% endfor %} 
 
 </table>
 </div>
</div>
 <div class="panel panel-custom">
 <div class="panel-heading">Ajouter un produits </div>
 <div class="panel-body">
 <form class="form-signin" action="index.php?page=produit" method="post" enctype="application/x-www-formurlencoded">
 		
 <div class="wrap-input100 validate-input" >
                                         <label for="inputDesignation" class="sr-only">Désignation:</label>
					<input class="input100" type="text" name="inputDesignation" placeholder="Saisir une désignation" id="inputLibelle" required >
					<span class="focus-input100"></span>
				</div>
<div class="wrap-input100 validate-input" data-validate = "S'il vous plaît entrer votre description">
     <label for="inputDescription" class="sr-only">Description:</label>
					<textarea class="input100" name="inputDescription" placeholder="Saisir une description" required></textarea>
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input">
					<input class="input100" type="number" name="inputPrix" placeholder="Saisir un prix" required>
					<span class="focus-input100"></span>
				</div>

       <div class="wrap-input100 validate-input" >
    <select class="input100list" name="inputType"  >
         <option >Choix d'un type</option>
         {% for t in listetype %}
 <option value="{{t.id}}">{{t.libelle}}</option>
  {% endfor %} 

 </select>                                 					
</div> 

				
 
 
 
 
 
 <div class="container-contact100-form-btn ">
					<button class="custom100-form-btn" type="submit" name="btAjouter">
Ajoute
					</button>
 </div>
 </form>

 </div>
 
</div>
  </div>
  
{% endblock %} 
{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %} 

    <h1>Administration - Gestion des livres </h1>
    <div class="panel panel-primary">
        <div class="panel-heading">Ajouter des Livres </div>
        <div class="panel-body">
            <form class="form-signin" action="index.php?page=gestionLivre" method="post" enctype="multipart/form-data">
                <input type="text" id="inputTitre" name="inputTitre" class="form-control" placeholder="Titre du Livre" required autofocus/>
                <select name="inputAuteur" class="form-control" required>
                    <option value="">Auteur</option>
                    {% for a in auteur %}
                    <option value="{{a.IdAuteur}}">{{a.NomAuteur}}</option>
                    {% endfor %}
                </select>
                <select name="inputEditeur" class="form-control" required>
                    <option value="">Editeur</option>
                    {% for e in editeur %}
                    <option value="{{e.IdEditeur}}">{{e.LibelleEditeur}}</option>
                    {% endfor %}
                </select>
                <input type="number" step="1" id="inputAnnee" placeholder="Année"  class="form-control" name="inputAnnee" value="1900" required />
                <select name="inputType" class="form-control" required>
                    <option value="">Genre</option>
                    {% for t in type %}
                    <option value="{{t.IdType}}">{{t.LibelleType}}</option>
                    {% endfor %}
                </select>
                <textarea name="inputResume" class="form-control" placeholder="Résumé" rows="5" required></textarea>
                
                <input type="hidden" name="max_file_size" value="5000000">
                Illustration :<input type="file" name="photo" id="photo" class="form-control"/>
                
                <input type="text" id="inputISBN" name="inputISBN" class="form-control" placeholder="ISBN" minlength="16" maxlength="18" size="18" required autofocus/>
                <select name="inputDispo" class="form-control" required>
                    <option value="">Disponibilité</option>
                    {% for d in dispo %}
                        <option value="{{d.IdDisponibilite}}">{{d.LibelleDisponibilite}}</option>
                    {% endfor %}
                </select>
                <input type="number" step="0.01" id="inputPrix" placeholder="Prix"  class="form-control" name="inputPrix" required />
                <input type="number" step="1" id="inputNbrExemplaire" placeholder="Nombre d'exemplaire"  class="form-control" name="inputNbrExemplaire" required />
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjoutLivre">Ajouter un Livre</button>
            </form>
        </div>    
    </div>
    
    
    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Illustration</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Editeur</th>
                    <th>Année</th>
                    <th>Genre</th>
                    <th>ISBN</th>
                    <th>Disponibilité</th>
                    <th>Prix</th>
                    <th>Nombre exemplaires</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for l in liste %}
                    <tr>
                        <td><img src="{{l.IllustrationLivre}}" width="100"/></td>
                        <td>{{l.TitreLivre}}</td>
                        <td>{{l.NomAuteur}}</td>
                        <td>{{l.LibelleEditeur}}</td>
                        <td>{{l.AnneeLivre}}</td>
                        <td>{{l.LibelleType}}</td>
                        <td>{{l.ISBNLivre}}</td>
                        <td>{{l.LibelleDisponibilite}}</td>
                        <td>{{l.PrixLivre}}</td>
                        <td>{{l.NbrExemplaireLivre}}</td>
                        <td>
                            <div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifLivre" method="post">
                                    <input type="hidden" name="id" value="{{l.IdLivre}}" />
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form>
                            </div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionLivre" method="post">
                                    <input type="hidden" name="inputID" value="{{l.IdLivre}}" />
                                    <button name="btSupProd"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form>
                            </div></td>
                    </tr> 
                {% endfor %}
            </table>
        </div>
    </div>
</div>
</div>      

{% endblock %} 
{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %}

    <h1>Administration - Gestion des auteurs </h1>

    <div class="panel panel-primary">
        <div class="panel-heading">Ajouter un Auteur </div>
        <div class="panel-body">
            <form class="form-signin" action="index.php?page=gestionAuteur" method="post" enctype="application/x-www-form-urlencoded">
                <input type="text" id="inputTitre" name="inputNom" class="form-control" placeholder="Nom" required autofocus/>
                <input type="text" id="inputTitre" name="inputPrenom" class="form-control" placeholder="Prenom" required autofocus/>
                <input type="date" id="inputTitre" name="inputDateNaiss" class="form-control" required autofocus/>
                <input type="text" id="inputTitre" name="inputPays" class="form-control" placeholder="Pays" required autofocus/>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjoutA">Ajouter un Auteur</button>
            </form>
        </div>
    </div>


    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date de naissance</th>
                    <th>Pays</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for a in liste %}
                    <tr>
                        <td>{{a.NomAuteur}}</td>
                        <td>{{a.PrenomAuteur}}</td>
                        <td>{{a.DateNaissAuteur}}</td>
                        <td>{{a.PaysAuteur}}</td>
                        <td>
                            <div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifAuteur" method="post">
                                    <input type="hidden" name="id" value="{{a.IdAuteur}}" />
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form>
                            </div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionAuteur" method="post">
                                    <input type="hidden" name="id" value="{{a.IdAuteur}}" />
                                    <button name="btSupA"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form>
                            </div></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}

{% extends "base.html.twig" %}
{% block title %}{{ parent() }}Accueil{% endblock %}
{% block activeAC %}active{% endblock %}
{% block contenu %}
<div>
  <h3 class="textcenter">Légendarium. Une librairie spécialisée !</h3>
  <hr>
  <div >
    <h3>Nos 10 dernières Nouveautés</h3>

  </div>
  {% if liste %}
  <div class="slider">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for l in liste %}
        <div class="swiper-slide">
          <div class="sliderCard">
            <div class="sliderText" style="background-image: url('{{ l.couverture }}');">
            <h3>{{ l.titre }}</h3>
            </div>
            <div class="sliderContent">
                <a href="index.php?page=livre&id={{ l.id }}">voir</a>
                <p>Prix {{ l.prix }}€</p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% else %}
    <h4 class="textcenter">Il n'y a aucun livre</h4>
  {% endif %}
  <hr>
  <div >
    <h3>Nos 10 dernières Coup de cœur</h3>

  </div>
  {% if liste %}
  <div class="slider">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for l in liste %}
        {% if l.idcoupdecoeur == 1 %}
        <div class="swiper-slide">
          <div class="sliderCard">
            <div class="sliderText" style="background-image: url('{{ l.couverture }}');">
            <h3>{{ l.titre }}</h3>
            </div>
            <div class="sliderContent">
                <a href="index.php?page=livre&id={{ l.id }}">voir</a>
                <p>Prix {{ l.prix }}€</p>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {% else %}
    <h4 class="textcenter">Il n'y a aucun livre</h4>
  {% endif %}

</div>
{% endblock %}

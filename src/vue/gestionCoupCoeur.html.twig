{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %}

    <h1>Administration - Gestion des Coups de coeur </h1>

<div class="panel panel-default">
  <!-- Table -->
     <div class="panel panel-primary">
        <div class="panel-heading">Ajouter des coups de coeur </div>
         <div class="panel-body">
            {% if form.maxIndex < 4 %}
                <form  class="form-signin" action="index.php?page=modifCoupCoeur" method="post" enctype="application/x-www-form-urlencoded">
                    <center><button class="button" type="submit" name="btAjoutCC">Ajouter</button></center>
                </form>
            {% else %}
                <center><button class="button inact" type="submit" name="RAS">Ajouter</button></center>
            {% endif %}
         </div>
    </div>

    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Coup de Coeur N°</th>
                    <th>Illustration</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Editeur</th>
                    <th>Année</th>
                    <th>Genre</th>
                    <th>ISBN</th>
                    <th>Disponibilité</th>
                    <th>Prix</th>
                    <th>Nombre exemplaires</th>
                    <th></th>
                    <th></th>
                </tr>
                {% set compte = 1 %}
                {% for c in liste %}
                    <tr>
                        <td>{{compte}}</td>
                        <td><img src="{{c.IllustrationLivre}}" width="100"/></td>
                        <td>{{c.TitreLivre}}</td>
                        <td>{{c.NomAuteur}}</td>
                        <td>{{c.LibelleEditeur}}</td>
                        <td>{{c.AnneeLivre}}</td>
                        <td>{{c.LibelleType}}</td>
                        <td>{{c.ISBNLivre}}</td>
                        <td>{{c.LibelleDisponibilite}}</td>
                        <td>{{c.PrixLivre}}</td>
                        <td>{{c.NbrExemplaireLivre}}</td>
                        <td>
                            <div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifCoupCoeur&id={{c.IdCoupCoeur}}" method="post">
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form>
                            </div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionCoupCoeur" method="post">
                                    <input type="hidden" name="id" value="{{c.IdCoupCoeur}}" />
                                    <button name="btSupCC"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form>
                            </div></td>
                    </tr>
                    {% set compte = compte + 1%}
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}

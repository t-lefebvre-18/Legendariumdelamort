{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %}

    <h1>Administration - Gestion des jeux </h1>

    <div class="panel panel-primary">
        <div class="panel-heading">Ajouter un Jeu </div>
        <div class="panel-body">
            <form class="form-signin" action="index.php?page=gestionJeu" method="post" enctype="multipart/form-data">
                <input type="text" id="inputNom" name="inputNomJeu" class="form-control" placeholder="Jeu" required autofocus/>
                <input type="number" id="inputDureeJeu" name="inputDureeJeu" class="form-control" placeholder="Durée moyenne du jeu" step="0.5" required autofocus/>
                <textarea name="inputDescription" class="form-control" placeholder="Description" rows="5" required></textarea>
                <textarea name="inputRegleJeu" class="form-control" placeholder="Règle du jeu" rows="5" required></textarea>
                <input type="hidden" name="max_file_size" value="20000000">
                Illustration :<input type="file" name="IllustrationJeu" id="IllustrationJeu" class="form-control"/>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjoutJ">Ajouter un Jeu</button>
            </form>
        </div>
    </div>


    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Illustration</th>
                    <th>Nom</th>
                    <th>DureeMoyJeu</th>
                    <th>Description</th>
                    <th>RegleJeu</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for j in liste %}
                    <tr>
                        <td><img src="{{j.IllustrationJeu}}" width="100"/></td>
                        <td>{{j.NomJeu}}</td>
                        <td>{{j.DureeMoyJeu}}h</td>
                        <td>{{j.DescriptionJeu}}</td>
                        <td>{{j.RegleJeu}}</td>
                        <td>
                            <div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifJeu" method="post">
                                    <input type="hidden" name="id" value="{{j.IdJeu}}" />
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form>
                            </div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionJeu" method="post">
                                    <input type="hidden" name="id" value="{{j.IdJeu}}" />
                                    <button name="btSupJ"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form>
                            </div></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}

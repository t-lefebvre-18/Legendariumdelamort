{% extends "baseAdmin.html.twig" %}
{% block title %}
  {{ parent() }}

{% endblock %}
{% block activeEV %}active{% endblock %}
{% block contenu %}

  <div class="centerdiv">
    <div class="card box-shadow card-size">
      <div class="card-body">
      {% if form.valide is defined %}
{% if form.valide == true %}
<h3 class="card-title">{{ form.messageTitre }}</h3>
<p class="cadr-text">{{ form.message }}</p>
<hr>
<div class="textcenter">
  <a href="index.php?page=adminevent" class="btn-event">Retour</a>
  <a href="index.php?page=ajoutevent" class="btn-event">Ajouter</a>
</div>
  {% else %}
  <h3 class="card-title">{{ form.messageTitre }}</h3>
  <p class="cadr-text">{{ form.message }}</p>
  <hr>
  <div class="textcenter">
    <a href="index.php?page=adminevent" class="btn-event">Retour</a>
    <a href="index.php?page=ajoutevent" class="btn-event">Ajouter</a>
  </div>
  {% endif %}
{% else %}
        <h3 class="card-title">Ajout evenement</h3>
        <form method="post">

          <div class="form-row">
          <div class="col">
            <!-- <label for="inputTitre" >Saisir un titre</label> -->
            <input class="form-control form-control-ajout" type="text" name="inputTitre" placeholder="Saisir un titre" id="inputTitre" required="required" autofocus="autofocus">
            <span ></span>
          </div>

          <div class="col">
            <!-- <label for="inputIllustration" >Saisir une illustration</label> -->
            <input class="form-control form-control-ajout" type="text" name="inputIllustration" placeholder="Saisir une illustration" id="inputIllustration" required="required" autofocus="autofocus">
            <span ></span>
          </div>
          </div>
          <br/>

            <div class="form-row">

              <!-- <label for="inputInformation">Saisir une description</label> -->
              <textarea class="form-control form-control-ajout form-area" rows="5" type="text" name="inputInformation" placeholder="Saisir une description" id="inputInformation" required="required" autofocus="autofocus" rows="5" ></textarea>
<span ></span>
            </div>


        <br>
        <div class="textcenter">
          <a href="index.php?page=adminevent" class="btn-event-sup">Annuler</a>
          <button type="submit" class="btn-form" name="btAjouter">Ajouter</button>
        </div>
        </form>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

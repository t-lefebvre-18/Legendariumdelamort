{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %} 

    <h1>Administration - Gestion des éditeurs</h1>

    <div class="panel panel-primary">
        <div class="panel-heading">Ajouter un éditeur </div>
        <div class="panel-body">
            <form  class="form-signin" action="index.php?page=gestionEditeur" method="post" enctype="application/x-www-form-urlencoded">
                <label for="inputLibelle" class="sr-only">Éditeur :</label>
                <input type="text" id="inputLibelle" name="inputLibelle" class="form-control" placeholder="Saisir un libelle" required autofocus>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjoutE">Ajouter</button>
            </form>
        </div>    
    </div>

    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr><th>Genre :</th></tr>
                {% for e in liste %}
                    <tr><td>{{e.LibelleEditeur}}</td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifEditeur" method="post">
                                    <input type="hidden" name="id" value="{{e.IdEditeur}}"/>
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form></div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionEditeur" method="post">
                                    <input type="hidden" name="id" value="{{e.IdEditeur}}" />
                                    <button name="btSupE"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form></div>
                        </td>

                    </tr> 
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %} 
{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %}

    <h1>Administration - Gestion des Ã©venements </h1>

    <div class="panel panel-primary">
        <div class="panel-heading">Ajouter un Event </div>
        <div class="panel-body">
            <form class="form-signin" action="index.php?page=gestionEvent" method="post" enctype="multipart/form-data">
                <input type="text" id="inputTitre" name="inputTitre" class="form-control" placeholder="Titre" required autofocus/>
                <textarea name="inputDescription" class="form-control" placeholder="Description" rows="5" required></textarea>
                <input type="date" id="inputTitre" name="inputDate" class="form-control" required autofocus/>
                <input type="hidden" name="max_file_size" value="5000000">
                Illustration :<input type="file" name="IllEvent" id="photo" class="form-control"/>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjoutE">Ajouter un Event</button>
            </form>
        </div>
    </div>


    <div class="panel panel-default">
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th>Illustration</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for e in liste %}
                    {% set test = 0 %}
                    {% for dp in listePass %}
                        {% if dp == e.IdEvent %}
                            {% set test = 1 %}
                        {% endif %}
                    {% endfor %}
                    {% if test == 1 %}
                        <tr style="color: red;">
                    {% else %}
                        <tr>
                    {% endif %}
                        <td><img src="{{e.IllustrationEvent}}" width="150"/></td>
                        <td>{{e.TitreEvent}}</td>
                        <td>{{e.DescriptionEvent}}</td>
                        <td>{{e.DateEvent}}</td>
                        <td>
                            <div class="btn-group btn-group-lg">
                                <form action="index.php?page=modifEvent" method="post">
                                    <input type="hidden" name="id" value="{{e.IdEvent}}" />
                                    <button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                </form>
                            </div>
                        </td>
                        <td><div class="btn-group btn-group-lg">
                                <form action="index.php?page=gestionEvent" method="post">
                                    <input type="hidden" name="id" value="{{e.IdEvent}}" />
                                    <button name="btSupE"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                                </form>
                            </div></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}
